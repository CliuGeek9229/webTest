<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
 
 <servlet>
    <servlet-name>registerLet</servlet-name>
    <servlet-class>com.servlet.registerLet</servlet-class>
  </servlet>
<servlet>
    <servlet-name>LoginLet</servlet-name>
    <servlet-class>com.servlet.loginLet</servlet-class>
  </servlet>


 
 <servlet-mapping>
    <servlet-name>registerLet</servlet-name>
    <url-pattern>/registerLet</url-pattern>
  </servlet-mapping>
 <servlet-mapping>
    <servlet-name>LoginLet</servlet-name>
    <url-pattern>/LoginLet</url-pattern>
  </servlet-mapping>
 
 
 
 
 
 
 <welcome-file-list>
    <welcome-file>Login.jsp</welcome-file>
  </welcome-file-list>
 
 </web-app>